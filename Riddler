Points = 0
Riddle1 = input("How many sides does a circle have? ");
if Riddle1 == "Two":
    print("Well Done")
    Points + 1
else:
    print("Try Again")
    Points - 1

Riddle? = input("How many sides does a circle have? ");
if Riddle? == "Two":
    print("Well Done")
else:
    print("Try Again")
